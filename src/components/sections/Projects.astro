---
import Section from "../Section.astro";
import { projects } from "@cv";
---

<Section title="Projects">
    <ul>
        {
            projects.map(({ url, description, highlights, name, isActive }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a
                                        href={url}
                                        title={name}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                    >
                                        {name}
                                    </a>

                                    {isActive && <span>&bull;</span>}
                                </h3>
                                <p>{description}</p>
                            </header>

                            <footer>
                                {highlights.map((highlight: string) => {
                                    return <span>{highlight}</span>;
                                })}
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /** Salvando la vida */
        gap: 1rem;
    }
    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;

        header {
            flex: 1;
        }

        h3 {
            margin-bottom: 4px;

            span {
                color: rgb(85, 212, 117);
            }
        }

        a {
            color: #111;
        }

        a:hover {
            text-decoration: underline;
        }

        p {
            font-size: 0.75rem;
            line-height: 1.2rem;
            margin-bottom: 4px;
        }

        footer {
            display: inline-flex;
            flex-wrap: wrap;
            gap: 4px;
            font-size: 0.6rem;

            span {
                border-radius: 6px;
                background: #eee;
                color: #444;
                font-size: 0.7rem;
                font-weight: 500;
                padding: 0.2rem 0.6rem;
            }
        }
    }
</style>
